{{#> base title="Pathfinder 2e - Dyslexic Character Sheets" body-id="body-build"}}

{{#> build-layout theme="adventure"}}
    {{#> left }}
        <img src="/images/coffee-stain.png" id="coffee-stain">

        {{#> milestones id='milestones-character' show=true }}
            <button class="milestone milestone--selected" data-milestone="start"><span>{{__ "Start"}}</span></button>
            <span class="arrow"></span>
            <button class="milestone" data-milestone="character"><span>{{__ "Character"}}</span></button>
            <span class="arrow"></span>
            <button class="milestone" data-milestone="options"><span>{{__ "Options"}}</span></button>
            <span class="arrow"></span>
            <button class="milestone" data-milestone="colours"><span>{{__ "Colours"}}</span></button>
            <span class="arrow"></span>
            <button class="milestone" data-milestone="picture"><span>{{__ "Picture"}}</span></button>
            <span class="arrow"></span>
            <button class="milestone" data-milestone="download"><span>{{__ "Download"}}</span></button>
        {{/milestones}}

        {{#> milestones id='milestones-gm' show=false }}
            <button class="milestone milestone--selected" data-milestone="start"><span>{{__ "Start"}}</span></button>
            <span class="arrow"></span>
            <button class="milestone" data-milestone="gm"><span>{{__ "GM"}}</span></button>
            <span class="arrow"></span>
            <button class="milestone" data-milestone="options"><span>{{__ "Options"}}</span></button>
            <span class="arrow"></span>
            <button class="milestone" data-milestone="colour"><span>{{__ "Colours"}}</span></button>
            <span class="arrow"></span>
            <button class="milestone" data-milestone="download"><span>{{__ "Download"}}</span></button>
        {{/milestones}}
    {{/left}}

    {{#> right dark=true}}
        {{#> slides-v id='slides-character' show=true }}
            {{#> slide milestone="start" slide=0 first=true }}
                <img src="/images/pathfinder2e.png" class="place">
                <div class="row">
                    <button class="stack pick-single">
                        <img src="/images/single.png" class="stack__stack">
                        <p class="stack__label">{{__ "Character"}}</p>
                    </button>
                    <button class="stack pick-gm">
                        <img src="/images/gm.png" class="stack__stack">
                        <p class="stack__label">{{__ "GM"}}</p>
                    </button>
                </div>
            {{/slide}}
            
            {{#> slide milestone="character" slide=1 show-next=true }}
                <h4>{{__ "Character"}}</h4>
                <table class="build-table">
                    <tr>
                        <th></th>
                        <th>{{__ "Ancestry"}}</th>
                        <th>{{__ "Heritage"}}</th>
                        <th></th>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <output name="ancestry" data-select="ancestry" class="output--select"></output>
                        </td>
                        <td>
                            <output name="heritage" data-select="heritage" class="output--select"></output>
                        </td>
                    </tr>

                    <tr>
                        <th></th>
                        <th>{{__ "Background"}}</th>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <output name="background" data-select="background" class="output--select"></output>
                        </td>
                    </tr>

                    <tr>
                        <th rowspan="2"></th>
                        <th>{{__ "Class"}}</th>
                        <th>{{__ "Subclass"}}</th>
                    </tr>
                    <tr>
                        <td>
                            <output name="class" data-select="class" class="output--select"></output>
                        </td>
                        <td>
                            <output name="subclass" data-select="" class="output--select"></output>
                        </td>
                    </tr>

                    <tr id="build-multiclass-row">
                        <th></th>
                        <th>{{__ "Multiclass"}}</th>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            {{!-- <output name="multiclass" data-select="multiclass" class="output--select"></output> --}}
                            <button class="btn btn--light button-add button-add-multiclass" data-select="multiclass">{{__ "Add"}}</button>
                        </td>
                        <td>
                            {{!-- <output name="submulticlass" class="output--select"></output> --}}
                        </td>
                    </tr>

                    <tr id="build-archetype-row">
                        <th></th>
                        <th>{{__ "Archetype"}}</th>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            {{!-- <output name="archetype" data-select="archetype" class="output--select"></output> --}}
                            <button class="btn btn--light button-add button-add-archetype" data-select="archetype">{{__ "Add"}}</button>
                        </td>
                        <td>
                            {{!-- <output name="subarchetype" class="output--select"></output> --}}
                        </td>
                    </tr>
                </table>

                <div class="columns">
                    <div class="column">
                        <h4>{{__ "Variant Rules"}}</h4>
                        <fieldset>
                            <p><label for='option-free-archetype'><input type='checkbox' name='free-archetype' id='option-free-archetype'> {{__ "Free archetype"}}</label></p>
                        </fieldset>
                    </div>
                    <div class="column"></div>
                </div>
            {{/slide}}
            
            {{#> slide milestone="options" slide=2 show-next=true }}
                
                <div class='columns'>
                    <div class='column'>

                    <h4>{{__ "Help & Reference"}}</h4>
                    <fieldset>
                        <p><input type='checkbox' name='build' id='option-build'> <label for='option-build'>{{__ "Build a character"}}</label></p>
                        <p class='info'>{{__ "A page to help beginners with the process of building their character."}}</p>
                        
                        <p><input type='checkbox' name='level-up' id='option-level-up' checked> <label for='option-level-up'>{{__ "Level up"}}</label></p>
                        <p class='info'>{{__ "A page to help you advance your character."}}</p>
                        
                        <p><input type='checkbox' name='reference' id='option-reference'> <label for='option-reference'>{{__ "Reference"}}</label></p>
                        <p class='info'>{{__ "A page to explain actions and traits."}}</p>
                    </fieldset>
                    
                    <h4>{{__ "Legal"}}</h4>
                    <fieldset id='legal'>
                        <p><label for='option-permission'><input type='checkbox' name='permission' id='option-permission'> {{__ "Permission to print"}}</label></p>
                        <p class='info'>{{__ "A page stating that this document may be legally printed."}}</p>
                        <p class='info'>{{{__ "For detailed licensing information, see <a href='/{{lang}}/legal.html'>Legal Info</a>."}}}</p>
                    </fieldset>
                    
                    <h4>{{__ "Organised Play"}}</h4>
                    <fieldset id='legal'>
                        <p><label for='option-pfs'><input type='checkbox' name='pfs' id='option-pfs'> {{__ "Pathfinder Society"}}</label></p>
                    </fieldset>

                    <h4>{{__ "Options"}}</h4>
                    <fieldset>
                        <p><label for='feat-diehard'><input type='checkbox' name='feat-diehard' id='feat-diehard'> {{__ "Diehard"}}</label></p>
                        {{!-- <p><label for='option-pfs'><input type='checkbox' name='pfs' id='option-pfs'> {{__ "Pathfinder Society"}}</label></p> --}}
                        
                        <p><label for='debug'><input type='checkbox' name='debug' id='debug'> {{__ "Debug layouts"}}</label></p>
                    </fieldset>
                    

                </div>

                <div class='column'>
                    
                    <h4>{{__ "Character"}}</h4>
                    <fieldset>
                        <p><label for='option-cover'><input type='checkbox' name='cover' id='option-cover' checked> {{__ "Cover page"}}</label></p>

                        <p><label for='option-character-background'><input type='checkbox' name='character-background' id='option-character-background'> {{__ "Character background"}}</label></p>
                        <p class='info'>{{__ "A page for tracking social relationships."}}</p>

                        <p><label for='option-archetype-generic'><input type='checkbox' name='archetype-generic' id='option-archetype-generic'> {{__ "Blank archetype"}}</label></p>
                        </fieldset>
                    </fieldset>

                    <h4>{{__ "Skills"}}</h4>
                    <fieldset>
                        {{!-- <p><label for='skills-group'><input type='checkbox' name='skills-group' id='skills-group'> {{__ "Group skills by ability"}}</label></p> --}}
                        <p><label for='skill-actions'><input type='checkbox' name='skill-actions' id='skill-actions' checked> {{__ "Skill actions"}}</label></p>
                        
                        <p><label for='option-actions'><input type='checkbox' name='option-actions' id='option-actions'> {{__ "More actions"}}</label></p>
                    </fieldset>

                    <h4>{{__ "Inventory"}}</h4>
                    <fieldset>
                        <p><label for="inventory-style">{{__ "Inventory style"}}:</label> &nbsp;
                            <select name="inventory-style" id="inventory-style">
                            <option value="half">{{__ "Half page"}}</option>
                            <option value="full" selected>{{__ "Full page"}}</option>
                            <option value="double">{{__ "Two pages"}}</option>
                            </select>
                        </p>
                    </fieldset>

                    <h4>{{__ "Companions"}}</h4>
                    <fieldset>
                        <p><input type='checkbox' name='animal-companion' id='option-animal-companion'> <label for='option-animal-companion'>{{__ "Animal companion"}}</label></p>
                        <p><input type='checkbox' name='familiar' id='option-familiar'> <label for='option-familiar'>{{__ "Familiar"}}</label></p>
                    </fieldset>

                    <h4>{{__ "Maps"}}</h4>
                    <fieldset>
                        <p><input type='checkbox' name='minis' id='option-minis'> <label for='option-minis'>{{__ "Map token page"}}</label></p>
                        <p class='info'>{{__ "Includes stand-up map figure and initiative tracker."}}</p>
                        <p class='info'>
                            {{__ "Size"}}:
                            <label for="mini-small"><input type="radio" name="mini-size" value="small" id="mini-small"> {{__ "Small"}}</label>
                            <label for="mini-medium"><input type="radio" name="mini-size" value="medium" id="mini-medium" checked> {{__ "Medium"}}</label>
                            <label for="mini-large"><input type="radio" name="mini-size" value="large" id="mini-large"> {{__ "Large"}}</label>
                        </p>
                    </fieldset>
                    </div>
                </div>
            {{/slide}}
            
            {{#> slide milestone="colours" slide=3 show-next=true }}
                <div class="columns">
                    <div class="column">
                        <h2>{{__ "Accessibility"}}</h2>

                        <p>{{__ "Language"}}: &nbsp; <button class="btn btn--light language-button">{{ lang }}</button> {{__ (languagename lang)}}</p>

                        <h4>{{__ "Dyslexia"}}</h4>
                        <fieldset>
                            <p class='dyslexic-fonts'><input type='checkbox' id='option-dyslexic' name='option-dyslexic'> <label for='option-dyslexic'>{{__ "Dyslexic fonts"}}</label></p>
                            <p class='info'>{{__ "Uses easy-to-read fonts, disables all-caps."}}</p>
                            
                            <p><label for='option-dyslexic-font-dyslexie' id='font-dyslexie'><input type='radio' name='option-dyslexic-font' value='dyslexie' id='option-dyslexic-font-dyslexie' checked> Dyslexie</label> (<a href='https://dyslexiefont.com/'>dyslexiefont.com</a>)</p>
                            <p><label for='option-dyslexic-font-lexend' id='font-lexend'><input type='radio' name='option-dyslexic-font' value='lexend' id='option-dyslexic-font-lexend'> Lexend Deca</label> (<a href='https://www.lexend.com/'>lexend.com</a>)</p>
                            <p><label for='option-dyslexic-font-sans' id='font-sans'><input type='radio' name='option-dyslexic-font' value='sans' id='option-dyslexic-font-sans'> Sans-serif</label></p>
                        </fieldset>

                        <h4>{{__ "Colours"}}</h4>
                        <fieldset class="high-contrast">
                            <p><span><input type='checkbox' id='option-high-contrast' name='option-high-contrast'> <label for='option-high-contrast'>{{__ "High contrast"}}</label><span></span></p>
                            <p class='info'>{{__ "Makes colours darker, removes white text."}}</p>
                        </fieldset>

                        <p><button class="btn btn--primary dyslexic-preset-button">{{__ "Dyslexic Preset"}}</button></p>

                        <h4>{{__ "Large print"}}</h4>
                        <fieldset>
                            <p class='large-print'><input type='checkbox' id='option-large-print' name='option-large-print'> <label for='option-large-print'>{{__ "Large print"}}</label></p>   
                            <p class='info'>{{__ "Enlarges text and fields, omits some elements to fit on the page."}}</p>
                        </fieldset>
                    </div>
                    
                    <div class="column">
                        <h2>{{__ "Colours"}}</h2>

                        <div class="row">
                            {{> colour-output id="base" name="Base colour" }}
                            {{> colour-output id="accent" name="Accent colour" }}
                        </div>

                        <div class="brightness-picker">
                            <label>{{__ "Print darkness"}}</label>
                            <div class="brightness-picker__inner">
                                <div class="brightness-picker__inner2">
                                    <input type="range" min="1" max="9" value="5" name="colour-brightness">
                                    <span class="brightness-picker__notch"></span>
                                </div>
                            </div>
                        </div>

                        <h2>{{__ "Background"}}</h2>
                        <div class="row">

                        </div>

                    </div>
                </div>
            {{/slide}}
            
            {{#> slide milestone="picture" slide=4 show-next=true }}
                <h2>{{__ "Picture"}}</h2>

                <p>...</p>
            {{/slide}}
            
            {{#> slide milestone="download" slide=5 last=true }}
                <h2>{{__ "Download"}}</h2>

                <h4>{{__ "International"}}</h4>
                <fieldset>
                    <p>{{__ "Language"}}: &nbsp; <button class="btn btn--light language-button">{{ lang }}</button> {{__ (languagename lang)}}</p>
                    <p>{{__ "Measurement units"}}: 
                        <select name="units">
                        <option selected id='units-default'>{{__ "Default"}} ({{__ "feet"}})</option>
                        <option value="imperial">{{__ "Imperial"}} ({{__ "feet"}})</option>
                        <option value="metric">{{__ "Metric"}} ({{__ "metres"}})</option>
                        {{!-- <option value="chinese">{{__ "Chinese"}} ({{__ "æ­¥"}})</option> --}}
                        </select>
                    </p>
                </fieldset>

                <h4>{{__ "Format"}}</h4>
                <fieldset>
                    <div class="columns">
                        <div class="column">
                            <p>
                                <input type='radio' name='download-format' value='html' id='download-format-html' checked>
                                <label for='download-format-html'><b>{{__ "HTML"}}</b></label>
                            </p>
                            <p class='info'>{{__ "Allows values to be filled in"}}</p>
                            <p class='info'>{{__ "Adjusts to fit your paper size"}}</p>
                        </div>
                        <div class="column">
                            <p>
                                <input type='radio' name='download-format' value='pdf' id='download-format-pdf'>
                                <label for='download-format-pdf'><b>{{__ "PDF"}}</b></label>
                            </p>
                            <p class='info'>{{__ "Use this if you have trouble printing HTML"}}</p>
                            <p class='info'>
                                <b>{{__ "Paper size:"}}</b>
                                <input type='radio' name='download-paper' value='Letter' id='download-letter' checked>
                                <label for='download-letter'>{{__ "US Letter"}}</label>

                                <input type='radio' name='download-paper' value='A4' id='download-a4'>
                                <label for='download-a4'>{{__ "A4"}}</label>
                            </p>
                        </div>
                    </div>
                </fieldset>

                <button class="place btn btn--primary button-download">{{__ "Download"}}</button>
            {{/slide}}

        {{/slides-v}}
        
        {{#> slides-v id='slides-gm' show=false }}
            {{#> slide milestone="start" slide=0 first=true }}
                <img src="/images/pathfinder2e.png" class="place">
                <div class="row">
                    <button class="stack pick-single">
                        <img src="/images/single.png" class="stack__stack">
                        <p class="stack__label">{{__ "Character"}}</p>
                    </button>
                    <button class="stack pick-gm">
                        <img src="/images/gm.png" class="stack__stack">
                        <p class="stack__label">{{__ "GM pages"}}</p>
                    </button>
                </div>
            {{/slide}}
            
            {{#> slide milestone="gm" slide=1 }}
                <div class="grid grid--2-2">
                    <button class="stack stack--fill pick-gm-npc">
                        <p class="stack__label">{{__ "NPCs"}}</p>
                    </button>
                    <button class="stack stack--fill pick-gm-maps">
                        <p class="stack__label">{{__ "Maps"}}</p>
                    </button>
                    <button class="stack stack--fill pick-gm-kingdom">
                        <p class="stack__label">{{__ "Kingdom"}}</p>
                    </button>
                </div>
            {{/slide}}

            {{#> slide milestone="options" slide=2 show-next=true }}
                {{#> tab-panes set='gm'}}
                    {{#> tab-pane set='gm' name='npc' pane-selected=true}}
                        <h3>{{__ "NPCs"}}</h3>
                    {{/tab-pane}}

                    {{#> tab-pane set='gm' name='maps' pane-selected=true}}
                        <h3>{{__ "Maps"}}</h3>

                    {{/tab-pane}}

                    {{#> tab-pane set='gm' name='kingdom' pane-selected=true}}
                        <h3>{{__ "Kingdom"}}</h3>
                    {{/tab-pane}}
                {{/tab-panes}}
            {{/slide}}
            
            {{#> slide milestone="colours" slide=3 show-next=true }}
                <p>Colours</p>
            {{/slide}}
            
            {{#> slide milestone="download" slide=4 last=true }}
                <p>Download</p>
            {{/slide}}
        {{/slides-v}}
    {{/right}}
{{/build-layout}}

{{> pathfinder2-ancestry-menu }}
{{#each pf2.heritageSelects}}
    {{> pathfinder2-heritage-menu key=this.select items=this}}
{{/each}}
{{> pathfinder2-background-menu }}
{{> pathfinder2-class-menu }}
{{!-- {{#each pf2.subclassSelects}}
    {{> pathfinder2-subclass-menu key=this.select}}
{{/each}} --}}
{{> pathfinder2-multiclass-menu }}
{{> pathfinder2-archetype-menu }}
{{!-- etc --}}
{{> colour-picker-menu id="base" name="Base Colour" }}
{{> colour-picker-menu id="accent" name="Accent Colour" }}

{{/base}}