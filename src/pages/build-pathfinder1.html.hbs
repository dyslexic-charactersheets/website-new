{{#> Base title="Pathfinder 1e - Dyslexic Character Sheets"}}

{{#> BuildLayout }}
  {{#> Left }}
    {{#> Pane bg="parchment" shadow="left"}}
      {{> MenuButtons}}
      
      <img src="/images/coffee-stain.png" id="coffee-stain">

      {{#> Switch id='switch-milestones' current='character'}}

        {{#> SwitchCase value='character'}}
          {{> Milestones
            id="milestones-character"
            forward="slides-character"
            current="start"
            milestones=(array 
              (item milestone="start" title="Start")
              (item milestone="class" title="Class")
              (item milestone="options" title="Options")
              (item milestone="download" title="Download")
            )
          }}
        {{/SwitchCase}}

        {{#> SwitchCase value='gm'}}
          {{> Milestones
            id="milestones-gm"
            forward="slides-gm"
            current="start"
            milestones=(array
              (item milestone="start" title="Start")
              (item milestone="gm" title="GM")
              (item milestone="gm-options" title="Options")
              (item milestone="gm-download" title="Download")
            )
          }}
        {{/SwitchCase}}

      {{/Switch}}
    {{/Pane}}
  {{/Left}}

  {{#> Right dark=true}}
    {{#> Pane bg="red"}}
      {{> BuildFormClassic game="pathfinder" gameData=pathfinder1 }}
    {{/Pane}}
  {{/Right}}
{{/BuildLayout}}

{{/Base}}
